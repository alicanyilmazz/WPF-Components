<Window x:Class="Spinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spinner"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="#FF1E1E1E"
        Title="MainWindow"
        Height="350" Width="525"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <LinearGradientBrush x:Key="SnakeStrokeBrush"
                         StartPoint="0,0" EndPoint="1,0"
                         MappingMode="RelativeToBoundingBox">

            <!-- Tail: çok kısa, neredeyse nokta kadar silinme -->
            <GradientStop Color="#0000C4FF" Offset="0.0"/>
            <!-- tamamen transparan -->
            <GradientStop Color="#AA00C4FF" Offset="0.015"/>
            <!-- hızlıca opaklaşıyor -->

            <!-- Kenarlara yakın bölgeler: tamamen opak mavi tonları -->
            <GradientStop Color="#FF00D8FF" Offset="0.20"/>

            <!-- Glow + fosforlu merkez -->
            <GradientStop Color="#FF40F0FF" Offset="0.38"/>
            <GradientStop Color="#FF80FAFF" Offset="0.50"/>
            <GradientStop Color="#FF40F0FF" Offset="0.62"/>

            <!-- Diğer kenara doğru tekrar opak mavi -->
            <GradientStop Color="#FF00D8FF" Offset="0.80"/>

            <!-- Head: yine çok kısa silinme -->
            <GradientStop Color="#AA00C4FF" Offset="0.985"/>
            <GradientStop Color="#0000C4FF" Offset="1.0"/>
            <!-- tamamen transparan -->
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Background="White">
        <Canvas x:Name="RootCanvas" Margin="40">

            <!-- Arka border -->
            <Path x:Name="BaseBorderPath"
                  Stroke="#FF17B2E6"
                  StrokeThickness="0.4"
                  StrokeLineJoin="Round"
                  Fill="Transparent" />

            <!-- Sabit kalınlıklı yılan: Fill ile boyanan şerit -->
            <Path x:Name="SnakePath"
                  Fill="{StaticResource SnakeStrokeBrush}"
                  StrokeThickness="0"
                  StrokeLineJoin="Round" />

        </Canvas>
    </Grid>
</Window>
