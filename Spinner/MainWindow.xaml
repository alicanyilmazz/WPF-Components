<Window x:Class="Spinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spinner"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="White"
        Title="MainWindow"   Height="350" Width="525"
       
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <LinearGradientBrush x:Key="SnakeStrokeBrush"
                         StartPoint="0,0" EndPoint="1,0"
                         MappingMode="RelativeToBoundingBox">
            <!-- Kenarlarda en koyu mavi (yine de yakın ton) -->
            <GradientStop Color="#00B0FF" Offset="0.0"/>

            <!-- Ortaya doğru orta ton mavi -->
            <GradientStop Color="#00B8FF" Offset="0.25"/>

            <!-- ORTA HER ZAMAN EN AÇIK: #00E5FF -->
            <GradientStop Color="#00E5FF" Offset="0.45"/>
            <GradientStop Color="#00E5FF" Offset="0.55"/>

            <!-- Ortadan uzaklaşırken tekrar orta ton -->
            <GradientStop Color="#00B8FF" Offset="0.75"/>

            <!-- Sağ uç: yine en koyu mavi (ama yakın ton) -->
            <GradientStop Color="#00B0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>


    <Grid Background="White">
        <Canvas x:Name="RootCanvas" Margin="40">
            <!-- Arka border -->
            <Path x:Name="BaseBorderPath"
      Stroke="#FF17B2E6"
      StrokeThickness="1"
      StrokeLineJoin="Round"
      Fill="Transparent" />

            <!-- YUVARLAK KÖŞELİ, ORTASI KALIN UÇLARI İNCE YILAN -->
            <Path x:Name="SnakePath"
                  Fill="{StaticResource SnakeStrokeBrush}"
                  StrokeThickness="0"
                  StrokeLineJoin="Round" />
        </Canvas>
    </Grid>
</Window>
