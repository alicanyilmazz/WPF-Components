<Window x:Class="Spinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spinner"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="White"
        Title="MainWindow"   Height="350" Width="525"
       
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <LinearGradientBrush x:Key="SnakeStrokeBrush"
                         StartPoint="0,0" EndPoint="1,0"
                         MappingMode="RelativeToBoundingBox">
            <!-- Uçlar: çok açık mavi / beyazımsı -->
            <GradientStop Color="#E0F6FF" Offset="0.0"/>

            <!-- Ortaya yaklaşırken: biraz daha koyu cyan -->
            <GradientStop Color="#00C5FF" Offset="0.22"/>

            <!-- ORTA PARLAK BAND (daha geniş ve belirgin) -->
            <GradientStop Color="#00E5FF" Offset="0.40"/>
            <GradientStop Color="#00E5FF" Offset="0.60"/>

            <!-- Ortadan uzaklaşırken tekrar biraz koyu cyan -->
            <GradientStop Color="#00C5FF" Offset="0.78"/>

            <!-- Sağ uç: tekrar çok açık mavi -->
            <GradientStop Color="#E0F6FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>



    <Grid Background="White">
        <Canvas x:Name="RootCanvas" Margin="40">
            <!-- HER ZAMAN GÖRÜNEN İNCE, YUMUŞAK KÖŞELİ MAVİ ÇERÇEVE -->
            <Path x:Name="BaseBorderPath"
                  Stroke="#FF17B2E6"
                  StrokeThickness="1"
                  StrokeLineJoin="Round"
                  Fill="Transparent" />

            <!-- YUVARLAK KÖŞELİ YILAN ÇİZGİSİ (MANUEL ÇİZİYORUZ) -->
            <Path x:Name="SnakePath"
                  Stroke="{StaticResource SnakeStrokeBrush}"
                  StrokeThickness="4"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  StrokeLineJoin="Round"
                  Fill="Transparent" />
        </Canvas>
    </Grid>
</Window>
